{
  "name": "music-challange",
  "version": "0.1.0",
  "homepage": "https://alessandrosommacale.github.io/music-challange",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "prepare": "husky",
    "ts-check": "yarn tsc -p tsconfig.json --noEmit",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d out"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.0",
    "focus-trap-react": "^11.0.4",
    "next": "16.0.3",
    "next-redux-wrapper": "^8.1.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitlint": "^20.1.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write --check src/",
      "eslint --fix src/",
      "jest --coverage --passWithNoTests"
    ]
  }
}
